{
    "name": "citruslab-tech/hermes-php-sdk",
    "description": "SDK for interacting with Hermes API",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "HermesSdk\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-detail": "phpunit --coverage-text",
        "test-coverage": [
            "phpunit --coverage-clover=coverage/clover.xml",
            "php validate-coverage.php 13"
        ]
    },
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3",
        "phpunit/php-code-coverage": "^11.0"
    }
}